{
  "manifest_version": 3,
  "name": "Next Translator",
  "short_name": "NT",
  "version": "0.0.1",
  "description": "By Amir hossein",
  "icons": {
    "16": "/icons/logo.png",
    "32": "/icons/logo.png",
    "48": "/icons/logo.png",
    "192": "/icons/logo.png"
  },
  "permissions": [],
  "web_accessible_resources": [
    {
      "resources": ["index.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["inject.js"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "index.html"
  }
}
